pipeline {
    agent any

    environment {
        VENV = "${WORKSPACE}/venv"    // virtual environment folder
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull code from your GitHub repo
                git(
                    url: 'https://github.com/Tsegaw-Mao/alx-backend-python.git',
                    branch: 'main',                  // specify branch
                    credentialsId: 'github-credentials' // add GitHub credentials in Jenkins
                )
            }
        }

        stage('Setup Python Environment') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip3 install --upgrade pip
                    pip3 install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest --junitxml=reports/test-results.xml
                '''
            }
            post {
                always {
                    // Publish test results to Jenkins
                    junit 'reports/test-results.xml'
                }
            }
        }
    }

    triggers {
        // no triggers â†’ manual build only
    }
}
